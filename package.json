    "react-navigation-redux-helpers": "^2.0.8",
    "react-redux": "^6.0.0",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.0.0-rc.0",
    "reselect": "^4.0.0",
    "typescript-fsa": "^3.0.0-beta-2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/react": "^16.7.13",
    "@types/react-native": "^0.57.18",
    "@types/react-navigation": "^2.13.7",
